.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 150rpx;
  height: 150rpx;
  margin: 10rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  margin-left:10px;
  color: #000000;
  font-size:22px;
}

.function-icon {
  border-radius: 10%;
  margin-right:5px;
  vertical-align:middle;
  width:40px;
  height:40px;
}

.function-name {
  margin-left:10px;
  color: #000000;
  font-size:15px;
}